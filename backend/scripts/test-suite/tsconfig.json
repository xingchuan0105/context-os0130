{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["../../lib/*"],
      "@/lib/*": ["../../lib/*"]
    }
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules"]
}
